<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle">
        <item name="backgroundColor">#0000</item>
        <item name="itemIconSize">24sp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <!--        <item name="menu">@menu/news_menu_navigation</item>-->
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!--Text Styles -->
    <style name="HeadlineText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LightText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="HeavyText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Button Styles -->
    <style name="DefaultButton">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">@dimen/corner_size</item>
        <item name="rippleColor">@color/white</item>
    </style>

</resources>